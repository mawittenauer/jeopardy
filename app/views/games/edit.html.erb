<h1>Edit Game</h1>
<br>
<h3>Name of Game:</h3>
<br>
<%= bootstrap_form_for @game do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="well">
        <%= f.text_field :name %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <h3>Categories:</h3>
      <br>
    </div>
  </div>
  <div class="row">
    <% @game.categories.each_with_index do |category, i| %>
      <div class="col-sm-2">
        <div class="well">
          <label for="category_<%= i + 1 %>"><%= "Category #{i + 1}" %></label>
          <%= text_field_tag "game[category][]", category.name, class: "form-control", id: "category_#{i + 1}" %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%= f.submit "Save", class: "btn btn-success" %>
<% end %>
