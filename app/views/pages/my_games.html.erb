<h2>Welcome, <%= current_user.name %></h2>
<br>
<div class="row">
  <% current_user.games.each do |game| %>
    <div class="col-sm-3">
      <div class="well">
        <h3><%= game.name %></h3>
        <h4><%= game.complete? ? "Ready to Play" : "Work in Progress" %></h4>
        <div class="progress progress-striped">
          <div class="progress-bar progress-bar-success" style="width: <%= game.percent_complete %>"></div>
        </div>
        <%= link_to game, class: "btn btn-warning btn-game" do %>
          edit <i class="glyphicon glyphicon-edit"></i>
        <% end %>
        <% if game.complete? %>
          <%= link_to game_play_url(game), class: "btn btn-success btn-game" do %>
            play <i class="glyphicon glyphicon-expand"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New Game", new_game_path, class: "btn btn-success" %>
